<h2>Update the drone</h2>

<form action="/drones/{{drone.id}}/edit" method="post">
    <label>
        Name: <br>
        <input type="text" name="name" value="{{drone.name}}">
    </label>

    <label>
        Propellers: 
        <input type="number" step="1" name="propellers" value="{{drone.propellers}}">
    </label>

    <label>
        Max Speed: 
        <input type="number" step="1" name="maxSpeed" value="{{drone.maxSpeed}}">
    </label>
    <br>

    <button type="submit">Save changes</button>
</form>